{
  "cleanupPeriodDays": 30,
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "0"
  },
  "includeCoAuthoredBy": true,
  "permissions": {
    "allow": [
      "Bash(ls:*)",
      "Bash(eza:*)",
      "Bash(cat:*)",
      "Bash(bat:*)",
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(find:*)",
      "Bash(fd:*)",
      "Bash(diff)",
      "Bash(delta)",
      "Bash(dig)",
      "Bash(dog)",
      "Bash(fzf:*)",
      "Bash(mkdir:*)",
      "Bash(touch:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(which:*)",
      "Bash(pwd:*)",
      "Bash(cd:*)",
      "Bash(jq:*)",
      "Bash(sed:*)",
      "Bash(echo:*)",
      "Bash(ghq:*)",
      "Bash(go:*)",
      "Bash(gofmt:*)",
      "Bash(goimports:*)",
      "Bash(cargo:*)",
      "Bash(make:*)",
      "Bash(docker:*)"

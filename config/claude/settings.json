      "Bash(wget:*)",
      "Bash(git push:*)",
      "Bash(git rebase:*)",
      "Bash(git reset:*)",
      "Bash(rm:*)",
      "Bash(sudo:*)",
      "Read(.env.*)",
      "Read(~/.ssh/**)",
      "Edit(//bin/**)",
      "Edit(//boot/**)",
      "Edit(//dev/**)",
      "Edit(//etc/**)",
      "Edit(//lib/**)",
      "Edit(//opt/**)",
      "Edit(//proc/**)",
      "Edit(//sbin/**)",
      "Edit(//sys/**)",
      "Edit(//usr/**)",
      "Edit(//var/**)",
      "Edit(~/.ssh/**)",
      "Write(//bin/**)",
      "Write(//boot/**)",
      "Write(//dev/**)",
      "Write(//etc/**)",
      "Write(//lib/**)",
      "Write(//opt/**)",
      "Write(//proc/**)",
      "Write(//sbin/**)",
      "Write(//sys/**)",
      "Write(//usr/**)",
      "Write(//var/**)",
      "Write(~/.ssh/**)"
    ]
  },
  "model": "sonnet",
  "preferredNotifChannel": "iterm2_with_bell",
  "theme": "dark-daltonized"
}

